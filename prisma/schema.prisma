// This connects to your Neon Database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// The Funnel Model
model Funnel {
  id          String   @id @default(uuid())
  userId      String   // Links to Clerk User ID (Security)
  name        String   // Funnel Name (e.g. "My Webinar")
  description String?  // Optional description
  subdomain   String?  @unique
  published   Boolean  @default(false)
  visits      Int      @default(0)  // <--- NEW: Tracks Page Views
  
  // The content blocks (JSON data for the editor)
  blocks      Json?    @default("[]") 
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}