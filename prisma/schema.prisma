generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  funnels   Funnel[]
}

model Funnel {
  id          String   @id @default(uuid())
  name        String
  subdomain   String   @unique
  description String?
  published   Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [clerkId])
  
  headline    String   @default("Unlock Your Potential")
  subheadline String   @default("Join thousands of happy customers.")
  price       Float    @default(49.99)
  
  theme       String   @default("blue")
  font        String   @default("sans")
  logoUrl     String?
  heroImage   String   @default("https://images.unsplash.com/photo-1556761175-5973dc0f32e7")
  customHtml  String?

  orders      Order[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id            String   @id @default(uuid())
  funnelId      String
  funnel        Funnel   @relation(fields: [funnelId], references: [id])
  customerEmail String
  amount        Float
  status        String   @default("SUCCESS")
  reference     String   @unique
  createdAt     DateTime @default(now())
}