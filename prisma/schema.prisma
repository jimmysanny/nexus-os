generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Merchant {
  id          String   @id @default(cuid())
  userId      String   @unique
  username    String?  @unique
  name        String?
  bio         String?
  logoUrl     String?
  bannerUrl   String?
  wallet      Float    @default(0)
  createdAt   DateTime @default(now())
}

model Client {
  id          String   @id @default(cuid())
  userId      String   
  name        String
  email       String
  phone       String?
  status      String   @default("Active")
  image       String?
  projects    Project[]
  invoices    Invoice[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  status      String   @default("In Progress")
  budget      Float?
  deadline    DateTime?
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  invoices    Invoice[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Invoice {
  id          String   @id @default(cuid())
  userId      String
  amount      Float
  status      String   @default("Pending")
  dueDate     DateTime
  paymentLink String?  // Stores Paystack URL
  paystackRef String?  // Stores Reference
  
  clientId    String
  client      Client   @relation(fields: [clientId], references: [id])
  
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Funnel {
  id          String   @id @default(cuid())
  userId      String
  name        String
  orders      Order[]
  createdAt   DateTime @default(now())
}
model Order {
  id          String   @id @default(cuid())
  funnelId    String
  funnel      Funnel   @relation(fields: [funnelId], references: [id])
  amount      Float
  createdAt   DateTime @default(now())
}
model Coupon {
  id        String   @id @default(cuid())
  code      String   @unique
  percent   Int
  funnelId  String?
  funnel    Funnel?  @relation(fields: [funnelId], references: [id])
  createdAt DateTime @default(now())
}
