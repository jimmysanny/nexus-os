generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        String   @id @default(cuid())
  reference String   @unique
  amount    Float
  currency  String   @default("KES") // NEW: Stores USD, KES, NGN
  status    String
  email     String
  funnelId  String?
  createdAt DateTime @default(now())
}

model Funnel {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float    @default(0)
  currency    String   @default("KES") // NEW: Creator sets this
  userId      String
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}