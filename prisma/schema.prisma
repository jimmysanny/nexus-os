generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Funnel {
  id          String   @id @default(cuid())
  userId      String   // The Creator
  name        String
  headline    String[]
  description String?
  price       Float
  currency    String   @default("KES")
  published   Boolean  @default(true)
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation: A funnel can have many orders
  orders      Order[]
}

model Order {
  id          String   @id @default(cuid())
  reference   String   @unique // The Paystack Reference (e.g. T12345...)
  amount      Float    // Amount paid
  currency    String
  email       String   // Buyer's Email
  status      String   @default("pending") // success, failed
  
  // Link to the Product
  funnelId    String
  funnel      Funnel   @relation(fields: [funnelId], references: [id])

  createdAt   DateTime @default(now())
}
